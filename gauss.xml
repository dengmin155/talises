<SIMULATION>
  <DIM>1</DIM>
  <FILENAME>0.000_1.bin</FILENAME>
  <PSI_REAL_1D>exp( -0.25*((x-x_0)/sigma_x)^2 )*cos(2*x)</PSI_REAL_1D>
  <PSI_IMAG_1D>exp( -0.25*((x-x_0)/sigma_x)^2 )*sin(2*x)</PSI_IMAG_1D>
  <CONSTANTS>
    <N>1</N>
    <x_0>-3</x_0>
    <sigma_x>1</sigma_x>
    <stepsize>0.0001</stepsize>
  </CONSTANTS>
  <ALGORITHM>
    <NX>256</NX>
    <XMIN>-10</XMIN><XMAX>10</XMAX>
  </ALGORITHM>
</SIMULATION>
